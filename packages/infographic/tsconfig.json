{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./esm",
    "jsx": "react-jsx",
    "types": ["node"],
    "composite": true,
    "jsxImportSource": "@antv/infographic",
    "paths": {
      "@antv/infographic": ["../infographic/src"],
      "@antv/infographic/*": ["../infographic/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "lib", "esm"]
}
