{
  "name": "@antv/infographic",
  "version": "0.0.1-beta.3",
  "description": "AntV Infographic generator and visualization library",
  "keywords": [
    "antv",
    "infographic",
    "visualization"
  ],
  "license": "MIT",
  "author": "Aarebecca",
  "exports": {
    ".": {
      "types": "./esm/index.d.ts",
      "import": "./esm/index.js",
      "require": "./lib/index.js"
    },
    "./jsx-runtime": {
      "types": "./esm/jsx-runtime.d.ts",
      "import": "./esm/jsx-runtime.js",
      "require": "./lib/jsx-runtime.js"
    },
    "./jsx-dev-runtime": {
      "types": "./esm/jsx-runtime.d.ts",
      "import": "./esm/jsx-runtime.js",
      "require": "./lib/jsx-runtime.js"
    }
  },
  "main": "./lib/index.js",
  "jsdelivr": "./dist/infographic.umd.min.js",
  "unpkg": "./dist/infographic.umd.min.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "files": [
    "lib",
    "esm",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "run-s clean build:esm build:cjs build:umd size",
    "build:cjs": "tsc --module commonjs --outDir lib",
    "build:esm": "tsc --module ESNext --outDir esm",
    "build:umd": "vite build",
    "build:watch": "tsc -p tsconfig.json --watch",
    "check:test": "tsc --noEmit -p __tests__",
    "ci": "run-s test build lint",
    "clean": "rm -rf esm lib dist tsconfig.tsbuildinfo",
    "lint": "eslint . --ext .ts,.tsx && npm run check:test",
    "size": "size-limit",
    "test": "vitest --run --coverage"
  },
  "dependencies": {
    "@antv/infographic-jsx": "workspace:^",
    "culori": "^4.0.2",
    "d3": "^7.9.0",
    "lodash-es": "^4.17.21",
    "roughjs": "^4.6.6",
    "round-polygon": "^0.6.7",
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@types/culori": "^4.0.1",
    "@types/d3": "^7.4.3",
    "@types/lodash-es": "^4.17.12",
    "@types/tinycolor2": "^1.4.6",
    "jsdom": "^27.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "size-limit": [
    {
      "gzip": true,
      "limit": "500 Kb",
      "path": "dist/infographic.min.js"
    },
    {
      "limit": "500 Kb",
      "path": "dist/infographic.min.js"
    }
  ]
}
